<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/title_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Call"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cancelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Close"
            android:textColor="#00a6ff"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/title_txt_view"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/form_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2">

                    <EditText
                        android:id="@+id/firstNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#00a6ff"
                        android:hint="First Name"
                        android:importantForAutofill="no"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textColorHint="#00a6ff"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/lastNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#00a6ff"
                        android:hint="Last Name"
                        android:importantForAutofill="no"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textColorHint="#00a6ff"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/number_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="3">

                    <Spinner
                        android:id="@+id/country_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.95"
                        android:gravity="center"
                        />

                    <EditText
                        android:id="@+id/numberEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="0.95"
                        android:backgroundTint="#00a6ff"
                        android:hint="Contact Number"
                        android:importantForAutofill="no"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textColorHint="#00a6ff"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/get_code_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1.1">

                        <Button
                            android:id="@+id/get_code_button"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:background="#00a6ff"
                            android:text="Get Code"
                            android:textColor="@color/white"
                            app:strokeColor="@color/white"
                            app:strokeWidth="2dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mobileOTPLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/mobileOTPEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="#00a6ff"
                        android:hint="Enter OTP"
                        android:importantForAutofill="no"
                        android:maxLength="4"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textColorHint="#00a6ff"
                        android:textSize="14sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="3">

                    <EditText
                        android:id="@+id/emailEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight="0.8"
                        android:backgroundTint="#00a6ff"
                        android:hint="email"
                        android:importantForAutofill="no"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textColorHint="#00a6ff"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/verify_email_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="2dp"
                        android:layout_weight="2.2"
                        android:gravity="right">

                        <Button
                            android:id="@+id/verifyEmailOtpButton"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:background="#00a6ff"
                            android:text="Verify"
                            android:textColor="@color/white"
                            app:strokeColor="@color/white"
                            app:strokeWidth="2dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/emailOTPLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/emailOTPEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="#00a6ff"
                        android:hint="Enter OTP"
                        android:importantForAutofill="no"
                        android:maxLength="4"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textColorHint="#00a6ff"
                        android:textSize="14sp"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/messageLayout"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/c2cbackground"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/messageEditText"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="15dp"
                    android:gravity="top"
                    android:hint="Message"
                    android:importantForAutofill="no"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textColorHint="#a8a8a8"
                    android:maxLength="160"/>

            </LinearLayout>

            <TextView
                android:id="@+id/count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:textColor="#000000"
                android:text="0/160"
                android:textSize="14sp"
                android:visibility="gone"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/checkbox_Layout"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/details_layout"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/accept_terms_and_conditions"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:buttonTint="#00a6ff"
                android:checked="false" />

            <TextView
                android:id="@+id/Terms_and_condition_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/accept_terms_and_conditions"
                android:text="I agree to the terms and conditions"
                android:textColor="#000000"
                android:textSize="15sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/connectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkbox_Layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            android:background="#00a6ff"
            android:text="Connect"
            android:textColor="@color/white"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/connectButton"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Powered by: "
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/poweredByTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="contexttocall.com"
                android:textColor="#00a6ff"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

</RelativeLayout>