<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/title_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Call"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cancelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Close"
            android:textColor="#00a6ff"
            android:textSize="18sp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/cancelImgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_close" />

        <LinearLayout
            android:id="@+id/details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/title_txt_view"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/form_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:paddingLeft="2dp"
                        android:background="@drawable/custom_edit_text"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/firstNameEditText"
                            android:layout_width="match_parent"
                            android:layout_height="45sp"
                            android:backgroundTint="@color/colorTransparent"
                            android:hint="First Name"
                            android:text=""
                            android:importantForAutofill="no"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorHint"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:paddingLeft="2dp"
                        android:background="@drawable/custom_edit_text"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/lastNameEditText"
                            android:layout_width="match_parent"
                            android:layout_height="45sp"
                            android:backgroundTint="@color/colorTransparent"
                            android:hint="Last Name"
                            android:importantForAutofill="no"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorHint"
                            android:textSize="14sp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/number_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="3">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/custom_edit_text"
                        android:layout_weight="0.95">

                        <Spinner
                            android:id="@+id/country_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="45sp"
                            android:gravity="center" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:paddingLeft="2dp"
                        android:background="@drawable/custom_edit_text"
                        android:layout_weight="0.95">

                        <EditText
                            android:id="@+id/numberEditText"
                            android:layout_width="match_parent"
                            android:layout_height="45sp"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="0.95"
                            android:backgroundTint="@color/colorTransparent"
                            android:hint="Contact Number"
                            android:importantForAutofill="no"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorHint"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/get_code_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1.2">

                        <Button
                            android:id="@+id/get_code_button"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/custom_button"
                            android:text="Get Code"
                            android:textColor="@color/white"
                            app:strokeColor="@color/white"
                            app:strokeWidth="2dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mobileOTPLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="2dp"
                        android:background="@drawable/custom_edit_text">

                        <EditText
                            android:id="@+id/mobileOTPEditText"
                            android:layout_width="match_parent"
                            android:layout_height="45sp"
                            android:backgroundTint="@color/colorTransparent"
                            android:hint="Enter OTP"
                            android:importantForAutofill="no"
                            android:maxLength="4"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorHint"
                            android:textSize="14sp"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="3">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="2dp"
                        android:layout_weight="0.8"
                        android:background="@drawable/custom_edit_text">

                        <EditText
                            android:id="@+id/emailEditText"
                            android:layout_width="match_parent"
                            android:layout_height="45sp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="0.8"
                            android:backgroundTint="@color/colorTransparent"
                            android:hint="Email address"
                            android:text=""
                            android:importantForAutofill="no"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorHint"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/verify_email_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="2dp"
                        android:layout_weight="2.2"
                        android:gravity="right">

                        <Button
                            android:id="@+id/verifyEmailOtpButton"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/custom_button"
                            android:text="Verify"
                            android:textColor="@color/white"
                            app:strokeColor="@color/white"
                            app:strokeWidth="2dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/emailOTPLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="2dp"
                        android:background="@drawable/custom_edit_text">

                        <EditText
                            android:id="@+id/emailOTPEditText"
                            android:layout_width="match_parent"
                            android:layout_height="45sp"
                            android:backgroundTint="@color/colorTransparent"
                            android:hint="Enter OTP"
                            android:importantForAutofill="no"
                            android:maxLength="4"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorHint"
                            android:textSize="14sp"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/messageLayout"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:background="@drawable/custom_edit_text">

                    <EditText
                        android:id="@+id/messageEditText"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:gravity="top"
                        android:hint="Enter message"
                        android:importantForAutofill="no"
                        android:inputType="textMultiLine"
                        android:lines="5"
                        android:textSize="14sp"
                        android:backgroundTint="@color/colorTransparent"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textColorHint="@color/colorHint"
                        android:maxLength="160"/>

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:textColor="@color/colorHint"
                android:text="0/160"
                android:textSize="14sp"
                android:visibility="gone"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/checkbox_Layout"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/details_layout"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/accept_terms_and_conditions"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:buttonTint="#00a6ff"
                android:checked="false" />

            <TextView
                android:id="@+id/Terms_and_condition_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/accept_terms_and_conditions"
                android:text="I agree to the terms and conditions"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/connectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkbox_Layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/custom_button"
            android:text="Connect"
            android:textColor="@color/white"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/connectButton"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Powered by: "
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/poweredByTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="contexttocall.com"
                android:textColor="#00a6ff"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

</RelativeLayout>